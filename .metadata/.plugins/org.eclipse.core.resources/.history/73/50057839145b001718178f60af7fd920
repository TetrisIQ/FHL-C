#include "wortliste.h"
#include <stdlib.h>
#include <stdio.h>
#include <string.h>

void wordlist(FILE* file) {
    int i;
    char c;
    char* text;
    char* tmp;
    if (NULL == (text = malloc(sizeof(file)))) {
        exit(EXIT_FAILURE);
    }

    if (NULL == (tmp = malloc(sizeof(file)))) {
        exit(EXIT_FAILURE);
    }

//    tmp = "";
    while (c != EOF) {
        i = -1;
        do {
            i++;
            c = fgetc(file);
            tmp[i] = c;
            if (tmp[i] == ' ') {
                tmp[i] = '\0';
            }
        } while (tmp[i] != '\0' || !(tmp[i] == '\n'));
        if (strstr(text, tmp) == NULL) { //überprüft ob der String tmp im String text vorhanden ist
            strcat(text, tmp);
            // add '\n' to the last index of text
        }
        i = -1;

    }

    if (c == EOF) { // Dateiende
        printf("ende");
    }
}

