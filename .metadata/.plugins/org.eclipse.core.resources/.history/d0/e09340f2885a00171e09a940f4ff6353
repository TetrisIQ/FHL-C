#include "wortliste.h"
#include <stdlib.h>
#include <stdio.h>
#include <string.h>


void wordlist(FILE* file) {
    int i, j;
    char c;
    char** text;
    if (NULL == (text = malloc(sizeof(file)))) {
        exit(EXIT_FAILURE);
    }







   //    char tmp[20];
       for (i = 0; c != EOF; i++) {
           c = fgetc(file); // 1 Zeichen lesen
           text[i] = (c);
   //        text[j] = c; //hier soll das zeichen in das ziel Array geschrieben werden
           if (c == ' ') {
   //            text[j] = (*tmp);
               j++;
               i = 0;
           }
       }

       if (c == EOF) { // Dateiende
           printf("ende");
       }
}




