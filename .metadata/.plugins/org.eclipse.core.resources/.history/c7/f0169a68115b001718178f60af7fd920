#include "wortliste.h"
#include <stdlib.h>
#include <stdio.h>
#include <string.h>

void wordlist(FILE* file) {
    int i;
    char c;
    char* text;
    char* tmp;
    if (NULL == (text = malloc(sizeof(file)))) {
        exit(EXIT_FAILURE);
    }

    if (NULL == (tmp = malloc(sizeof(file)))) {
        exit(EXIT_FAILURE);
    }

//    tmp = "";
    for (i = 0; c != EOF; i++) {
        do {
            c = fgetc(file);
            tmp[i] = c;
            if (tmp[i] == ' ') {
                tmp[i] = '\0';
            }
        }while (tmp[i] == '\0');
        if (strstr(text, tmp) == NULL) {
            strcpy(text, tmp);
        }
        i = -1;

    }

    if (c == EOF) { // Dateiende
        printf("ende");
    }
}

