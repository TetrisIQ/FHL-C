#include "anacae.h"
#include "caesar.h"
#include <string.h>
#include <stdio.h>
#include <ctype.h>


void anacae(char* text) {
int textSize = StringLength(text);



char offset = 'E' - (findCharacterE(text, textSize));
caesar(text, offset);

}

char findCharacterE(char* text, int textSize) {
	char ret = 0;
	int i;
	char e, c;
	int a, b;

	while (text[i] != '\0') {
			c = toupper(text[i]);
			a = charRate(text, c, textSize);
			i++;
			c = toupper(text[i]);
			b = charRate(text, c, textSize);
			if (a <= b) {
				ret = b;
			} else {
				ret = a;
			}
			i++;
	}
		printf("%c ", e);
	i = 0;


	return ret;

}

int charRate(char* text, char c, int textSize) {
	int counter = 0;
	int i;
		for (i = 0; i <= textSize; i++) {
			if (text[i] == c) {
				counter++;
			}
		}
	return counter;

}

int StringLength(char* text) {
	int i = 0;
	while (text[i] != '\0') {
		i++;
	}
	return i;
}

