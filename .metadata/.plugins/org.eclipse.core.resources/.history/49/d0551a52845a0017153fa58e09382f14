#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main(void) {
    char c;
    char text[][];
    FILE* file;
    char filename[100];
    printf("Welche datei soll Verarbeitet werden. (absoluter Pfad)\n");
    // Dateiname einlesen
    fgets(filename, 100, stdin);
    // das \n aus Dateinamen entfernen
    filename[strcspn(filename, "\n")] = 0;
    file = fopen(filename, "r"); //oeffnen zum Lesen

    if (file == NULL) {
        printf("Fehler Datei konnte nicht gelesen werden!");
    }    // FEHLER Datei kann nicht geoeffnet werden

    if (NULL == (text = malloc(sizeof(file)))) {
        exit(EXIT_FAILURE);
    }

    c = fgetc(file); // 1 Zeichen lesen
    if (c != ' ') {
        text
    }

    if (c == EOF) { // Dateiende
        printf("ende");
    }
}

